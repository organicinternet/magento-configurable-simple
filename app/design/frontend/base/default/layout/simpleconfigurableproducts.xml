<?xml version="1.0"?>
<layoutUpdate>
    <catalog_product_view>
        <reference name="head">
            <!-- We need product_extension.js to be loaded after varien/product.js
                 but we can't necessarily guarantee the load order of the script using the addJs mechanism.
                 Items of type 'skin_js' load after those of type 'js' however, so we use that.
                 (See getCssJsHtml in app/code/core/Mage/Page/Block/Html/Head.php) -->
            <action method="addItem"><type>skin_js</type><name>js/scp_product_extension.js</name></action>
        </reference>

        <reference name="product.info.options.wrapper">
            <action method="setTemplate"><template>catalog/product/view/options/scpwrapper.phtml</template></action>
        </reference>

        <reference name="product.info.options">
            <action method="setTemplate"><template>catalog/product/view/scpoptions.phtml</template></action>
        </reference>
    </catalog_product_view>

    <customer_account>
        <reference name="sale.reorder.sidebar">
            <action method="setTemplate"><template>sales/reorder/scpsidebar.phtml</template></action>
        </reference>
    </customer_account>


    <customer_logged_in>
        <reference name="sale.reorder.sidebar">
            <action method="setTemplate"><template>sales/reorder/scpsidebar.phtml</template></action>
        </reference>
    </customer_logged_in>

    <oi_ajax_co>
        <reference name="root">
            <action method="setTemplate"><template>page/scpcontentonly.phtml</template></action>
        </reference>
        <reference name="content">
            <block output="toHtml" type="catalog/product_view_options" name="product.info.options" as="product_options" template="catalog/product/view/scpajaxoptions.phtml">
                <action method="addOptionRenderer"><type>text</type><block>catalog/product_view_options_type_text</block><template>catalog/product/view/options/type/text.phtml</template></action>
                <action method="addOptionRenderer"><type>file</type><block>catalog/product_view_options_type_file</block><template>catalog/product/view/options/type/file.phtml</template></action>
                <action method="addOptionRenderer"><type>select</type><block>catalog/product_view_options_type_select</block><template>catalog/product/view/options/type/select.phtml</template></action>
                <action method="addOptionRenderer"><type>date</type><block>catalog/product_view_options_type_date</block><template>catalog/product/view/options/type/date.phtml</template></action>
            </block>
            <block output="toHtml" type="catalog/product_view" name="product.tierprices" as="tierprices" template="catalog/product/view/tierprices.phtml"/>
        </reference>
    </oi_ajax_co>
    <oi_ajax_image>
        <reference name="root">
            <action method="setTemplate"><template>page/scpcontentonly.phtml</template></action>
        </reference>
        <reference name="content">
            <block output="toHtml" type="catalog/product_view_media" name="product.info.media" as="media" template="catalog/product/view/media.phtml"/>
        </reference>
    </oi_ajax_image>

    <oi_ajax_gallery translate="label">
        <label>Catalog Product Image Gallery Popup</label>
        <reference name="root">
            <action method="setTemplate"><template>page/popup.phtml</template></action>
        </reference>
        <reference name="content">
            <block type="catalog/product_gallery" name="catalog_product_gallery" template="catalog/product/gallery.phtml"/>
        </reference>
    </oi_ajax_gallery>

</layoutUpdate>
