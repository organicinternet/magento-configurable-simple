<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <SCP translate="label" module="simpleconfigurableproducts">
            <label>SCP</label>
            <sort_order>1000000</sort_order>
        </SCP>
    </tabs>
    <sections>
        <SCP_options translate="label" module="simpleconfigurableproducts">
            <label>SCP Config</label>
            <tab>SCP</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1000000</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <cart translate="label">
                    <label>SCP - Cart</label>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <show_config_product_options>
                            <label>Show Configurable Product Options In Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_config_product_options>
                        <show_custom_options>
                            <label>Show Custom Options In Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Only applies to SCP configurable products</comment>
                        </show_custom_options>
                        <show_configurable_product_name>
                            <label>Show Configurable Product Name in Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>No = Show simple product name in cart</comment>
                        </show_configurable_product_name>
                        <show_configurable_product_image>
                            <label>Show Configurable Product Image in Cart</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>No = Show simple product image in cart</comment>
                        </show_configurable_product_image>
                    </fields>
                </cart>
                <product_page translate="label">
                    <label>SCP - Product Page</label>
                    <sort_order>2</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <change_name>
                            <label>Dynamically update displayed product name</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Takes affect once all configurable options have been selected</comment>
                        </change_name>
                        <change_description>
                            <label>Dynamically update displayed product description</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Takes affect once all configurable options have been selected</comment>
                        </change_description>
                        <change_short_description>
                            <label>Dynamically update displayed product short description</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>65</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Takes affect once all configurable options have been selected</comment>
                        </change_short_description>
                        <change_attributes>
                            <label>Dynamically update displayed product 'additional information'</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>67</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Takes affect once all configurable options have been selected</comment>
                        </change_attributes>
                        <change_image>
                            <label>Dynamically update displayed product picture</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Takes affect once all configurable options have been selected</comment>
                        </change_image>
                        <change_image_fancy>
                            <label>Update gallery images as well as main image?</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Uses ajax to pull in the correct related product images too</comment>
                        </change_image_fancy>
                        <show_price_ranges_in_options>
                            <label>Show price ranges in Configurable Product Option dropdowns</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </show_price_ranges_in_options>
                        <change_stock>
                            <label>Dynamically update displayed product's stock status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>999</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Takes affect once all configurable options have been selected</comment>
                        </change_stock>
                    </fields>
                </product_page>
            </groups>
        </SCP_options>
    </sections>
</config>
